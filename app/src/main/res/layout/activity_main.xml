<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.lenscape.android.lenscape.MainActivity">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/camera_image_640_480"
        android:scaleType="center"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/welcome_title"
        android:textColor="#FFFFFF"
        android:textSize="35sp"
        android:fontFamily="sens-serif-light"
        android:layout_centerInParent="true"
        android:layout_alignParentTop="true"/>

    <TextView
        android:id="@+id/txt_opening_hours"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#FFFFFF"
        android:fontFamily="sens-serif-light"
        android:text="@string/opening_hours"
        android:layout_alignParentBottom="true"
        android:layout_centerInParent="true"
        android:paddingBottom="8dp"
        android:paddingTop="8dp"/>

    <TextView
        android:id="@+id/txt_phone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/phone"
        android:textColor="#FFFFFF"
        android:fontFamily="sens-serif-light"
        android:layout_above="@id/txt_opening_hours"
        android:layout_centerInParent="true"
        android:paddingTop="8dp"/>

    <TextView
        android:id="@+id/txt_email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/email"
        android:textColor="#FFFFFF"
        android:fontFamily="sens-serif-light"
        android:layout_above="@id/txt_phone"
        android:layout_centerInParent="true"
        android:paddingTop="8dp"/>



    <TextView
        android:layout_above="@id/txt_email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/description"
        android:textColor="#FFFFFF"
        android:textSize="23sp"
        android:fontFamily="sens-serif-light"
        android:layout_centerInParent="true"
        android:paddingBottom="80dp"/>





</RelativeLayout>
